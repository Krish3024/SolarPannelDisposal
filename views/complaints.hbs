    <div class="container">

        <h1 style="text-align: center;">Lodge a Complaint</h1>
        <div class="container mt-5">
            <form action="/complaints" method="post">
                <div class="mb-3">
                    <label for="userName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="userName" name="userName"  
                        style="background-color: #8098A9;color: white;">
                </div>

                <div class="mb-3">
                    <label for="complaintTitle" class="form-label">Title</label>
                    <input type="text" class="form-control" id="complaintTitle" name="complaintTitle"  
                        style="background-color: #8098A9;color: white;">
                </div>

                <div class="mb-3">
                    <label for="complaint" class="form-label">Description</label>
                    <textarea class="form-control" id="complaint" name="complaint" rows="5"
                        style="background-color: #8098A9;color: white;"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4">
                        <label for="state" class="form-label">State</label>
                        <input type="text" class="form-control" id="state" name="state"  
                            style="background-color: #8098A9;color: white;">
                    </div>

                    <div class="col-sm-4">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control" id="city" name="city"  
                            style="background-color: #8098A9;color: white;">
                    </div>

                    <div class="col-sm-4">
                        <label for="pincode" class="form-label">Pincode</label>
                        <input type="number" class="form-control" id="pincode" name="pincode"  
                            style="background-color: #8098A9;color: white;">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Publish</button>
            </form>

        </div>
